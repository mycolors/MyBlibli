<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="@dimen/view_margin_small">

    <android.support.v7.widget.CardView
        android:id="@+id/car_view"
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <ImageView
            android:id="@+id/img_drama"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/text_watch_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/view_margin_small"
            android:layout_marginStart="@dimen/view_margin_small"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_small" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/text_drama_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/view_margin_small"
        android:layout_marginStart="@dimen/view_margin_small"
        android:layout_marginTop="@dimen/view_margin_small"
        android:maxLines="2"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_size_normal"
        app:layout_constraintTop_toBottomOf="@+id/car_view" />

    <TextView
        android:id="@+id/text_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_margin_small"
        android:textSize="@dimen/font_size_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/text_drama_title"
        app:layout_goneMarginBottom="@dimen/view_margin_small" />


</android.support.constraint.ConstraintLayout>